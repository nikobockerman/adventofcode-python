{
    $schema: "https://docs.renovatebot.com/renovate-schema.json",
    extends: ["config:best-practices", ":pinDependencies"],
    lockFileMaintenance: {
        enabled: true,
    },
    packageRules: [
        {
            description: "Disable docker pinning for devcontainer",
            matchFileNames: [".devcontainer/Dockerfile"],
            pinDigests: false,
        },
    ],
}
